#include<iostream>

using namespace std;

int main()
{
	int n;    //输入整数个数
	int i;    //计数器
	int sum;  //数的和
	int a;    //每次输入的数值
	sum = 0;
	cout << "请输入要计算的整数的个数";
	cin >> n;
	for (i = 1; i <= n; i++)
	{
		cin >> a;
		sum = sum + a;//每次的值加和到 sum 之中
	}
	cout << sum << endl;
	return 0;
}
